<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.collections.FXCollections?>
<?import Project.TestFile?>
<BorderPane fx:controller="Project.Main" xmlns:fx="http://javafx.com/fxml">
    <center>
        <TableView fx:id="table">
            <columns>
                <TableColumn fx:id="file_column" text="File" prefWidth="400">
                    <cellValueFactory>
                        <PropertyValueFactory property="Filename" />
                    </cellValueFactory>
                </TableColumn>


                <TableColumn fx:id="actual_class" text="Actual Class" prefWidth="150">
                    <cellValueFactory>
                        <PropertyValueFactory property="ActualClass" />
                    </cellValueFactory>
                </TableColumn>


                <TableColumn fx:id="spam_prob" text="Spam Probability" prefWidth="200">
                    <cellValueFactory>
                        <PropertyValueFactory property="SpamProbability" />
                    </cellValueFactory>
                </TableColumn>
            </columns>

        </TableView>
    </center>

    <bottom>
        <GridPane alignment="CENTER_LEFT" hgap="10" vgap="10">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
            <children>
                <Label text="Accuracy: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="accuracy_field" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Precision: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="precision_field" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            </children>
        </GridPane>
    </bottom>
</BorderPane>