<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<BorderPane fx:id="layout" fx:controller="Project.Main" xmlns:fx="http://javafx.com/fxml">

    <bottom>
        <GridPane alignment="CENTER_LEFT" hgap="10" vgap="10">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
            <children>
                <Label text="Accuracy: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="accuracy_field" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Precision: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="precision_field" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            </children>
        </GridPane>
    </bottom>
</BorderPane>